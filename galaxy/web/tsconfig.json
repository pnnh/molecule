{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    //"noImplicitAny": true,  // 有些业务场景下，需要是any
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "static",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "docker/build/types/**/*.ts",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages"
  ]
}
