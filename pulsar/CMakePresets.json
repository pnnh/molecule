{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-gcc",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-gcc",
      "installDir": "${sourceDir}/install/linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
        // "CMAKE_C_COMPILER": "/usr/bin/gcc-14",
        // "CMAKE_CXX_COMPILER": "/usr/bin/g++-14"
      },
      "environment": {}
    },
    {
      "name": "linux-clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang",
      "installDir": "${sourceDir}/install/linux-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      },
      "environment": {}
    }
  ],
  "buildPresets": [
    {
      "name": "linux-gcc",
      "configurePreset": "linux-gcc"
    },
    {
      "name": "linux-clang",
      "configurePreset": "linux-clang"
    }
  ],
  "testPresets": []
}