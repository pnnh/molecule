{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "polaris-server-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/polaris-server/Polaris/Polaris.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
        },
        {
            "label": "pulsar-server-build",
            "command": "cmake",
            "type": "process",
            "args": [
                "--build",
                "--preset",
                "linux",
                "--target",
                "--verbose"
            ]
        }
    ]
}